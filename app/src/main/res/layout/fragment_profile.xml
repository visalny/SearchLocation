<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/profile_background"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sok San"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="65dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/calibriz"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test.123@gmail.com"
                android:drawableLeft="@drawable/ic_profile_email_24dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="40dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789"
                android:drawableLeft="@drawable/ic_profile_phone_24dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="facebook.com/sok.san"
                android:drawableLeft="@drawable/ic_profile_facebook"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="#000000"/>

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile_picture"
            android:layout_marginTop="90dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="4dp"/>

    </RelativeLayout>

</FrameLayout>